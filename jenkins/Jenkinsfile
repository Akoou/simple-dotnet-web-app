pipeline { 
    agent {
        kubernetes {
            yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: dotnet
    image: mcr.microsoft.com/dotnet/sdk:8.0
    command:
    - cat
    tty: true
"""
        }
    }

    stages {
        stage('Build') {
            steps {
                container('dotnet') {
                    sh 'dotnet --version'
                    sh 'dotnet restore'
                    sh 'dotnet build'
                }
            }
        }

        stage('Test') { 
            steps {
                container('dotnet') {
                    sh 'dotnet test --no-build --no-restore --collect:"XPlat Code Coverage"'
                }
            }

            post {
                always {
                    script {
                        coverage {
                            sourceFileResolver 'NEVER_STORE'
                            tools {
                                cobertura '**/coverage.cobertura.xml'
                            }
                        }
                    }
                }
            }
        }
    }
}
